{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@multer": ["packages/multer/src/index.ts"],
      "@shared": ["packages/shared/src/index.ts"],
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["packages"]
}
